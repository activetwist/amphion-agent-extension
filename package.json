{
    "name": "mcd-starter-kit",
    "displayName": "MCD Starter Kit",
    "description": "Initialize a full Micro-Contract Development (MCD) project scaffold with a single command.",
    "version": "1.11.1",
    "publisher": "stanton-brooks",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "mcd",
        "scaffold",
        "project",
        "starter",
        "kanban"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcd.init",
                "title": "MCD: Initialize New Project"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "mcd.init",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package --allow-missing-repository"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.15.0",
        "typescript": "^5.3.0"
    }
}