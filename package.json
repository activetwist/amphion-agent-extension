{
    "name": "amphion-agent",
    "displayName": "AmphionAgent",
    "description": "Scaffold operator-gated Micro-Contract Development workspaces with governance docs and a local Command Deck.",
    "version": "1.28.2",
    "license": "Proprietary",
    "icon": "icon.png",
    "publisher": "active-twist",
    "author": {
        "name": "Stanton Brooks / Active Twist Consulting Group, LLC",
        "url": "https://linkedin.com/in/stanton-brooks"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/activetwist/amphion-agent-extension.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "mcd",
        "ai",
        "governance",
        "command-deck",
        "scaffold",
        "project",
        "starter",
        "kanban"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcd.init",
                "title": "MCD: Initialize New Project"
            },
            {
                "command": "mcd.openDashboard",
                "title": "MCD: Open Command Deck Dashboard"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "mcd.init",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package --allow-missing-repository"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.15.0",
        "typescript": "^5.3.0"
    }
}