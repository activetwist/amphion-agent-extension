{
    "name": "amphion-agent",
    "displayName": "AmphionAgent",
    "description": "Scaffold operator-gated Micro-Contract Development workspaces with governance docs and a local Command Deck.",
    "version": "1.50.9",
    "license": "Proprietary",
    "icon": "icon.png",
    "publisher": "active-twist",
    "author": {
        "name": "Stanton Brooks / Active Twist Consulting Group, LLC",
        "url": "https://linkedin.com/in/stanton-brooks"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/activetwist/amphion-agent-extension.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "mcd",
        "ai",
        "governance",
        "command-deck",
        "scaffold",
        "project",
        "starter",
        "kanban"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcd.init",
                "title": "MCD: Initialize New Project"
            },
            {
                "command": "mcd.openDashboard",
                "title": "MCD: Open Amphion Agent Controls"
            },
            {
                "command": "mcd.diagnoseChatDispatch",
                "title": "MCD: Diagnose Chat Dispatch"
            },
            {
                "command": "mcd.validateChatDispatch",
                "title": "MCD: Validate Chat Dispatch Self-Tests"
            }
        ],
        "configuration": {
            "title": "AmphionAgent",
            "properties": {
                "amphion.chatDispatch.openDelayMs": {
                    "type": "number",
                    "default": 120,
                    "minimum": 30,
                    "maximum": 1500,
                    "description": "Delay in milliseconds between opening/focusing a chat surface and typing command text."
                },
                "amphion.chatDispatch.enableDiagnosticsLogging": {
                    "type": "boolean",
                    "default": false,
                    "description": "Log detailed chat dispatch diagnostics to the 'AmphionAgent Chat Dispatch' output channel."
                },
                "amphion.chatDispatch.vscodeCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Optional command ID overrides for Visual Studio Code chat dispatch."
                },
                "amphion.chatDispatch.cursorCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Optional command ID overrides for Cursor chat dispatch."
                },
                "amphion.chatDispatch.windsurfCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Optional command ID overrides for Windsurf chat dispatch."
                },
                "amphion.chatDispatch.antigravityCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Optional command ID overrides for Antigravity chat dispatch."
                },
                "amphion.chatDispatch.genericCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Optional fallback command ID overrides for unknown VS Code-based IDE runtimes."
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "amphionAgent",
                    "title": "Amphion",
                    "icon": "icon.svg"
                }
            ]
        },
        "views": {
            "amphionAgent": [
                {
                    "type": "webview",
                    "id": "amphionAgent.controlsView",
                    "name": "Agent Controls"
                }
            ]
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "mcd.init",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package --allow-missing-repository"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.15.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.18"
    }
}
